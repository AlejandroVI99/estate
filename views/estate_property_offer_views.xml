<?xml version="1.0"?>
<odoo>
  <record id="estate_property_offer_view_tree" model="ir.ui.view">
      <field name="name">estate.property.offer.tree</field>
      <field name="model">estate.property.offer</field>
      <field name="arch" type="xml">
        <tree string="Channel">
            <field name="price"/>
            <field name="partner_id"/>
            <field name="status"/>
            <field name="validity"/>
            <field name="date_deadline"/>
            <button name="action_accept_offer" type="object" string='Accept' icon="fa-check"/>
            <button name="action_refuse_offer" type="object" string='Refuse' icon="fa-times"/>
        </tree>
      </field>
  </record>

  <record id="estate_property_offer_view_form" model="ir.ui.view">
      <field name="name">estate.property.offer.form</field>
      <field name="model">estate.property.offer</field>
      <field name="arch" type="xml">
        <form string="Test">
          <sheet>
            <div>
              <label for="price"/>
              <field name="price" class="mb16"/>
            </div>
            <div>
              <label for="partner_id"/>
              <field name="partner_id" class="mb16"/>
            </div>
            <div>
              <label for="status"/>
              <field name="status" class="mb16"/>
            </div>
            <div>
              <label for="validity"/>
              <field name="validity" class="mb16"/>
            </div>
            <div>
              <label for="date_deadline"/>
              <field name="date_deadline" class="mb16"/>
            </div>
          </sheet>
        </form>
      </field>
  </record>
  
  <record id="estate_property_offer_action" model="ir.actions.act_window">
    <field name="name">Offers</field>
    <field name="res_model">estate.property.offer</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
